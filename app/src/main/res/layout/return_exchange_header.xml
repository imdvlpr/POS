<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/listBg"
    android:showDividers="end"
    android:divider="@color/item_name"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:elevation="1dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reorderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="orderId"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|start"
            android:layout_weight="0.18"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reitemcountno"
            android:text="5"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|start"
            />

        <TextView
            android:id="@+id/reitemcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical|start"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total ="
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:textAlignment="viewEnd"
            android:layout_weight=".65" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/retotalconut"
            android:hint="00.00"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:textAlignment="viewEnd"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="8dp">
        <TextView
            android:id="@+id/reorderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26/10/11 2:22:22"
            android:textColor="@color/item_name"
            android:textSize="@dimen/album_title"
            android:textStyle="bold"
            android:gravity="center_vertical|start"
            android:layout_weight="0.18"
            />
    </LinearLayout>
    <!-- <Button
         android:id="@+id/paymentoptions"
         style="?android:textAppearanceSmall"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/payment_options"
         android:textStyle="bold"
         android:layout_weight="1"
         />-->

</LinearLayout>
