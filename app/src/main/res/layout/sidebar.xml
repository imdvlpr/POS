<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:background="@color/colorAccent1"
        android:elevation="10dp"
        android:orientation="vertical" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_shopping_cart_black" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_transform_black" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_reports_black" />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_card_giftcard_black" />
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_group_black" />
        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_build_black" />
        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_settings_black" />
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_cached_black" />
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_power_settings_new_black" />
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingLeft="28dp"
            android:paddingBottom="24dp"
            android:src="@drawable/ic_info_outline_black" />
                </LinearLayout>
        </ScrollView>
</LinearLayout>
