<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:showDividers="beginning|end"
    android:background="@drawable/borders_shadow">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:baselineAligned="true"
        android:padding="@dimen/card_margin"
        android:visibility="gone"
        android:id="@+id/Linearview"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Item test item size"
                android:textSize="@dimen/album_title"
                android:textColor="@color/item_name"
                android:id="@+id/LitemName"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="34392932k234kjs"
                android:layout_marginTop="@dimen/margin"
                android:id="@+id/LitemSku"
                android:textSize="@dimen/item_sku"
                android:layout_weight="1"/>
           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="offer"
                android:layout_marginTop="@dimen/margin"
                android:textColor="@color/colorAccent"
                android:id="@+id/LitemOffers"
                android:textSize="@dimen/item_sku"
                android:layout_weight="1"/>-->
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="40dp"
            android:baselineAligned="true"
            android:orientation="vertical"
            android:layout_weight="0.3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Rs"
                android:id="@+id/LitemPrice"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/Rs"
                android:id="@+id/orignalprice"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/orignal_price"
                android:layout_weight="1"
                />
        </LinearLayout>
       <!-- <EditText
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/LitemQty"
            android:text="1"
            android:textSize="15dp"
            android:inputType="numberDecimal"
            android:maxLength="5"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:background="@drawable/qtyedieextstyle"
            android:layout_weight="1"
            />-->

        <Spinner
            android:id="@+id/LitemQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
             ></Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/Rs"
            android:id="@+id/LItemTotal"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_weight="0.5"/>

        <ImageView
            android:id="@+id/itemRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete_black_24dp"
             />
    </LinearLayout>


    <!--<include
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        />-->
</LinearLayout>